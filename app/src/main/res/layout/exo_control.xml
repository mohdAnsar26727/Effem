<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/exo_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:src="@drawable/play_button"
        app:layout_constraintBottom_toBottomOf="@+id/powerOffBtn"
        app:layout_constraintEnd_toStartOf="@id/exo_pause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/powerOffBtn" />

    <ImageView
        android:id="@+id/exo_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:src="@drawable/pause_button"
        app:layout_constraintBottom_toBottomOf="@+id/powerOffBtn"
        app:layout_constraintEnd_toStartOf="@id/powerOffBtn"
        app:layout_constraintStart_toEndOf="@+id/exo_play"
        app:layout_constraintTop_toTopOf="@+id/powerOffBtn" />

    <ImageView
        android:id="@+id/powerOffBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:src="@drawable/power_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exo_pause"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
